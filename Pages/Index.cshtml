@{
    ViewBag.Title = "Index";
}

<h2>Generate Cover Letter</h2>

<form asp-action="GenerateCoverLetter" method="post">
    <div>
        <label for="location">Company:</label>
        <input type="text" id="location" name="Location" required />
    </div>
    <div>
        <label for="position">Position:</label>
        <input type="text" id="position" name="Position" required />
    </div>
    <div>
        <label for="company">Location:</label>
        <input type="text" id="company" name="Company" required />
    </div>
    <div>
        <label for="aboutMeType">About Me Type:</label>
        <select id="aboutMeType" name="AboutMeType" required>
            <option value="1">Web Developer</option>
            <option value="2">Software Developer</option>
            <option value="3">Automation Tester</option>
        </select>
    </div>
    <button type="submit">Generate</button>
</form>

@if (ViewBag.CoverLetter != null)
{
    <h2>Generated Cover Letter</h2>
    <div>
        @Html.Raw(ViewBag.CoverLetter)
    </div>
}